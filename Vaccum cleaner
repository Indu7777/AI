class SimpleReflexVacuumAgent:
    def __init__(self):
        self.location = "A"  # Start at room A

    def perceive(self, environment):
        return self.location, environment[self.location]

    def act(self, percept, environment):
        loc, status = percept
        if status == "Dirty":
            print(f"Cleaning {loc}...")
            environment[loc] = "Clean"
        else:
            print(f"{loc} is clean. Moving...")
            self.location = "B" if self.location == "A" else "A"

environment = {"A": "Dirty", "B": "Dirty"}  # Initial state

agent = SimpleReflexVacuumAgent()
for i in range(4):
    percept = agent.perceive(environment)
    agent.act(percept, environment)
    print(environment)
